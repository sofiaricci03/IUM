@section styles {
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet" />
    
    <style>
        /* Migliora visualizzazione eventi */
        .fc-event {
            border-radius: 4px;
            padding: 2px 4px;
            font-size: 0.85rem;
            cursor: pointer;
        }
        
        .fc-event:hover {
            opacity: 0.8;
            transform: scale(1.02);
            transition: all 0.2s;
        }
        
        /* Giorni con totale ore */
        .fc-daygrid-day.fc-day-today {
            background-color: #fff3cd !important;
        }
        
        .day-total-hours {
            z-index: 3;
        }
        
        /* Modale migliorata */
        .onit-label-required::after {
            content: " *";
            color: #dc3545;
        }
    </style>
}

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>

    <script>
        document.getElementById("checkTrasferta").addEventListener("change", function () {
            document.getElementById("boxTrasferta").style.display =
                this.checked ? "block" : "none";
        });

    </script>
    <script>
        // Carica progetti all'apertura del modale
        document.addEventListener('DOMContentLoaded', function() {
            caricaProgetti();
            
            // Auto-compila cliente quando selezioni progetto
            document.getElementById('progetto').addEventListener('change', function() {
                const selectProgetto = this;
                const selectedOption = selectProgetto.options[selectProgetto.selectedIndex];
                const cliente = selectedOption.getAttribute('data-cliente') || '';
                document.getElementById('cliente').value = cliente;
            });
        });

        async function caricaProgetti() {
            try {
                const response = await fetch('/Responsabile/CalendarioApi/GetProgetti');
                const progetti = await response.json();
                
                const selectProgetto = document.getElementById('progetto');
                
                // Mantieni opzione vuota
                selectProgetto.innerHTML = '<option value="">Seleziona progetto...</option>';
                
                // Aggiungi progetti
                progetti.forEach(p => {
                    const option = document.createElement('option');
                    option.value = p.id;
                    option.textContent = p.nome;
                    option.setAttribute('data-cliente', p.cliente);
                    selectProgetto.appendChild(option);
                });
            } catch (error) {
                console.error('Errore caricamento progetti:', error);
                alert('Errore nel caricamento dei progetti');
            }
        }
    </script>
