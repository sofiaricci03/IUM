    }

    /* Rendicontazioni card */
    .rend-card {
        transition: all 0.2s;
        cursor: pointer;
    }

    .rend-card:hover {
        transform: translateX(5px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>
}

@section scripts {
<script>
    let meseCorrente = new Date().getMonth();
    let annoCorrente = new Date().getFullYear();
    let rendicontazioneCorrente = null;

    // ===============================
    // TAB APPROVAZIONI
    // ===============================

    async function caricaRendicontazioni() {
        const response = await fetch('/Responsabile/Rendicontazione/GetRendicontazioniDaApprovare');
        const data = await response.json();
        
        const container = document.getElementById('listaRendicontazioni');
        
        if (data.rendicontazioni.length === 0) {
            container.innerHTML = `
                <div class="onit-card p-5 text-center">
                    <i class="fa-solid fa-clipboard-check fa-3x text-muted mb-3"></i>
                    <h4>Nessuna rendicontazione da approvare</h4>
                    <p class="text-muted">Tutte le rendicontazioni sono state processate</p>
                </div>
            `;
            document.getElementById('badgeDaApprovare').style.display = 'none';
        } else {
            container.innerHTML = '';
            data.rendicontazioni.forEach(r => {
                const card = document.createElement('div');
                card.className = 'onit-card p-3 mb-2 rend-card';
                card.onclick = () => apriDettaglio(r.id);
                card.innerHTML = `
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1"><i class="fa-solid fa-user"></i> ${r.dipendente}</h5>
                            <p class="text-muted mb-0">
                                <i class="fa-solid fa-calendar"></i> ${r.meseNome}
                                <span class="ms-3"><i class="fa-solid fa-clock"></i> Inviato il ${r.dataInvio}</span>
                            </p>
                        </div>
                        <button class="btn btn-primary">
                            <i class="fa-solid fa-eye"></i> Visualizza
                        </button>
                    </div>
                `;
                container.appendChild(card);
            });
            
            document.getElementById('badgeDaApprovare').textContent = data.rendicontazioni.length;
            document.getElementById('badgeDaApprovare').style.display = 'inline-block';
        }
    }

    async function apriDettaglio(rendicontazioneId) {
        rendicontazioneCorrente = rendicontazioneId;
        
        const response = await fetch(`/Responsabile/Rendicontazione/GetDettaglioRendicontazione?rendicontazioneId=${rendicontazioneId}`);
        const data = await response.json();
        
        const content = document.getElementById('dettaglioContent');
        content.innerHTML = `
            <div class="mb-4">
                <h4>${data.dipendente}</h4>
                <p class="text-muted">Periodo: ${data.mese} - Inviato il ${data.dataInvio}</p>
                <h5>Totale ore: <span class="text-primary">${data.oreTotali}h</span></h5>
            </div>
            
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Orario</th>
                            <th>Ore</th>
                            <th>Progetto</th>
                            <th>Cliente</th>
                            <th>Attività</th>
                            <th>Descrizione</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${data.dettagli.map(d => `
                            <tr>
                                <td>${d.data}</td>
                                <td>${d.oraInizio} - ${d.oraFine}</td>
                                <td><strong>${d.ore.toFixed(1)}h</strong></td>
                                <td>${d.progetto}</td>
                                <td>${d.cliente}</td>
                                <td>${d.attivita}</td>
                                <td>${d.descrizione || '-'}</td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            </div>
        `;
        
        new bootstrap.Modal(document.getElementById('modaleDettaglio')).show();
    }

    async function approvaRendicontazione() {
        if (!confirm('Confermi l\'approvazione di questa rendicontazione?')) return;
        
        try {
            const response = await fetch('/Responsabile/Rendicontazione/Approva', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    rendicontazioneId: rendicontazioneCorrente,
                    note: ''
                })
            });
            
            const data = await response.json();
            
            if (response.ok) {
                alert(data.message);
                bootstrap.Modal.getInstance(document.getElementById('modaleDettaglio')).hide();
                caricaRendicontazioni();
            } else {
                alert('Errore durante l\'approvazione');
            }
        } catch (error) {
            alert('Errore di connessione');
        }
    }

    async function respingiRendicontazione() {
        const note = prompt('Motivo del respingimento (obbligatorio):');
        if (!note) return;
        
        try {
            const response = await fetch('/Responsabile/Rendicontazione/Respingi', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    rendicontazioneId: rendicontazioneCorrente,
                    note: note
                })
            });
            
            const data = await response.json();
            
            if (response.ok) {
                alert(data.message);
                bootstrap.Modal.getInstance(document.getElementById('modaleDettaglio')).hide();
                caricaRendicontazioni();
            } else {
                alert(data.error || 'Errore durante il respingimento');
            }
        } catch (error) {
            alert('Errore di connessione');
        }
    }

    // ===============================
    // TAB MIE ATTIVITÀ
    // ===============================

    async function caricaMese() {
        const response = await fetch(`/Responsabile/Rendicontazione/GetStatoMese?anno=${annoCorrente}&mese=${meseCorrente + 1}`);
        const data = await response.json();
        
        aggiornaIntestazione();
        renderizzaGiorni(data.giorni);
        aggiornaStatistiche(data.giorni);
    }

    function aggiornaIntestazione() {
        const data = new Date(annoCorrente, meseCorrente, 1);
        const nomeMese = data.toLocaleDateString('it-IT', { month: 'long', year: 'numeric' });
        document.getElementById('titoloMese').textContent = 
            nomeMese.charAt(0).toUpperCase() + nomeMese.slice(1);
    }

    function renderizzaGiorni(giorni) {
        const container = document.getElementById('grigliaGiorni');
        container.innerHTML = '';

        giorni.forEach(g => {
            const col = document.createElement('div');
            col.className = 'col-lg-2 col-md-3 col-sm-4';
            
            const card = document.createElement('div');
            card.className = `giorno-card ${g.colorClass} d-flex flex-column align-items-center justify-content-center p-3`;
            card.onclick = () => window.location.href = `/Responsabile/Dashboard?date=${g.data}`;
            
            card.innerHTML = `
                <div class="giorno-settimana">${g.giornoSettimana}</div>
                <div class="giorno-numero">${g.dataFormattata.split('/')[0]}</div>
                <div class="giorno-ore">${g.ore > 0 ? g.ore + 'h' : '—'}</div>
            `;

            col.appendChild(card);
            container.appendChild(col);
        });
    }

    function aggiornaStatistiche(giorni) {
        const completi = giorni.filter(g => g.stato === 'Completo').length;
        const parziali = giorni.filter(g => g.stato === 'Parziale').length;
        const mancanti = giorni.filter(g => g.stato === 'Mancante').length;
        const oreTot = giorni.reduce((sum, g) => sum + g.ore, 0);

        document.getElementById('giorniCompleti').textContent = completi;
        document.getElementById('giorniParziali').textContent = parziali;
        document.getElementById('giorniMancanti').textContent = mancanti;
        document.getElementById('oreTotali').textContent = Math.round(oreTot);
    }

    document.getElementById('btnMesePrecedente')?.addEventListener('click', () => {
        meseCorrente--;
        if (meseCorrente < 0) {
            meseCorrente = 11;
            annoCorrente--;
        }
        caricaMese();
    });

    document.getElementById('btnMeseSuccessivo')?.addEventListener('click', () => {
        meseCorrente++;
        if (meseCorrente > 11) {
            meseCorrente = 0;
            annoCorrente++;
        }
        caricaMese();
    });

    document.getElementById('btnMeseCorrente')?.addEventListener('click', () => {
        const oggi = new Date();
        meseCorrente = oggi.getMonth();
        annoCorrente = oggi.getFullYear();
        caricaMese();
    });

    // ===============================
    // INIZIALIZZAZIONE
    // ===============================

    document.addEventListener('DOMContentLoaded', () => {
        caricaRendicontazioni();
        
        // Quando switcha al tab "Le mie attività"
        document.getElementById('mieattvita-tab').addEventListener('shown.bs.tab', () => {
            caricaMese();
        });
    });
</script>
}