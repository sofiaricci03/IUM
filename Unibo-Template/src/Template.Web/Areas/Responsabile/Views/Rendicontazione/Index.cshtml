    }

    .giorno-card .giorno-settimana {
        font-size: 0.75rem;
        opacity: 0.9;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .giorno-card .giorno-ore {
        font-size: 0.85rem;
        font-weight: 600;
        margin-top: 0.5rem;
    }

    .badge-legenda {
        display: inline-flex;
        align-items-center;
        gap: 5px;
