<!DOCTYPE html>
<html lang="@this.CurrentCulture().Name" class="@ViewData["FullscreenClass"]">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - OnModuli</title>

    @RenderSection("googlehead", false)
    @RenderSection("metas", false)

    <link href="~/node_modules/@@fortawesome/fontawesome-free/css/all.min.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/bundle-global.min.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/custom.css" asp-append-version="true" rel="stylesheet" />

    <!-- FULLCALENDAR CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.css" />

    @RenderSection("styles", false)
</head>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

<body>

    @RenderSection("googlebody", false)
    @RenderBody()

    <script type="text/javascript">
        var clientLocale = '@this.CurrentCulture().Name';
    </script>

    <environment include="Development">
        <script src="~/js/bundle-global.js" asp-append-version="true"></script>
    </environment>
    <environment include="Staging,Production">
        <script src="~/js/bundle-global.min.js" asp-append-version="true"></script>
    </environment>

    <!-- FULLCALENDAR JS -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
