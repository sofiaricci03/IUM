@section scripts{
    <script type="text/javascript">
        @this.RenderAlertsWithToastify()

        // Preview immagine selezionata
        document.getElementById('fileInput')?.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    document.getElementById('previewImage').src = event.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        // Upload foto profilo
        async function uploadFotoProfilo() {
            const fileInput = document.getElementById('fileInput');
            const file = fileInput.files[0];
            
            if (!file) {
                showMessage('Seleziona un\'immagine', 'warning');
                return;
            }

            const formData = new FormData();
            formData.append('file', file);

            try {
                const response = await fetch('/Profilo/UploadFoto', {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();

                if (response.ok) {
                    showMessage(data.message, 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showMessage(data.error || 'Errore durante l\'upload', 'danger');
                }
            } catch (error) {
                showMessage('Errore di connessione', 'danger');
            }
        }

        // Rimuovi foto profilo
        async function rimuoviFotoProfilo() {
            if (!confirm('Vuoi rimuovere la foto profilo?')) return;

            try {
                const response = await fetch('/Profilo/RimuoviFoto', { method: 'POST' });
                const data = await response.json();
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Errore durante la rimozione');
                }
            } catch (error) {
                alert('Errore di connessione');
            }
        }

        function showMessage(message, type) {
            const msgDiv = document.getElementById('uploadMessage');
            msgDiv.className = `alert alert-${type}`;
            msgDiv.textContent = message;
            msgDiv.classList.remove('d-none');
        }
    </script>

    @RenderSection("scripts", false)
}